<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:elevation="2dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/less_white"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/face_card"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:weightSum="10"
        android:elevation="2dp"
        android:background="@color/less_white"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true">
    
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/user_ico"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/user_icon"
                android:tint="@color/blue_tint"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jyotish Ji"
                android:textSize="20dp"
                android:typeface="sans"
                android:textStyle="bold"
                android:id="@+id/name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jyotish@gmail.com"
                android:textSize="15dp"
                android:typeface="sans"
                android:id="@+id/contact"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/call_received"
                    android:tint="@color/green"/>
                <TextView
                    android:id="@+id/duration"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:typeface="monospace"
                    android:text="21/4, 6:44 pm, 43s"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/expanded_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:weightSum="9.5"
        android:elevation="2dp"
        android:background="@color/less_white"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                android:id="@+id/view_profile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/contact_face"
                android:tint="@color/remote_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/divider"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                android:id="@+id/view_chat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/mess"
                android:tint="@color/remote_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/divider"
                android:layout_marginVertical="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                android:id="@+id/view_voice_call"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/audio_icon"
                android:tint="@color/remote_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/divider"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                android:id="@+id/view_video_call"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/baseline_videocam_black_36dp"
                android:tint="@color/remote_background"/>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>